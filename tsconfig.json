      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next" // ðŸ”¥ Ð²Ð¸ÐºÐ»ÑŽÑ‡Ð°Ñ” ÐºÐµÑˆÐ¾Ð²Ð°Ð½Ñ– Ñ‚Ð¸Ð¿Ð¸
